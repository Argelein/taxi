# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                           controllers.Application.index(path = "")

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file               controllers.Assets.at(path="/public/assets", file)

############################### Storage ###########################################
GET        /api/db/sql/drop            controllers.StorageController.dropSql
GET        /api/db/drop                controllers.StorageController.drop

GET        /api/db/sql/create          controllers.StorageController.createSql
GET        /api/db/create              controllers.StorageController.create

GET        /api/db/sql/recreate        controllers.StorageController.recreateSql
GET        /api/db/recreate            controllers.StorageController.recreate

GET        /api/db/init                controllers.StorageController.init

############################# Entity routes #######################################
# User routes
GET        /api/users                  controllers.UserController.read






# Every other page (should be the last route)
GET        /*path                      controllers.Application.index(path)



